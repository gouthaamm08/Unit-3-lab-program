#include <stdio.h>
#include <stdlib.h>
int main()
{
    int *ptr, i;
    int n = 3, new_n = 5;
    ptr = (int *)malloc(n * sizeof(int));

    if (ptr == NULL)
    {
        printf("Memory allocation failed\n");
        return 1;
    }
    for (i = 0; i < n; i++)
    {
        ptr[i] = (i + 1) * 10;
    }
    printf("Values before realloc:\n");
    for (i = 0; i < n; i++)
    {
        printf("%d ", ptr[i]);
    }
    ptr = (int *)realloc(ptr, new_n * sizeof(int));
    if (ptr == NULL)
    {
        printf("\nMemory reallocation failed\n");
        return 1;
    }    for (i = n; i < new_n; i++)
    {
        ptr[i] = (i + 1) * 10;
    }
    printf("\nValues after realloc:\n");
    for (i = 0; i < new_n; i++)
    {
        printf("%d ", ptr[i]);
    }
    free(ptr);
    return 0;
}
