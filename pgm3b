#include <stdio.h>
#include <string.h>

struct Student
{
    int id;
    char name[20];
    float marks;
};

int main()
{
    struct Student s1;
    struct Student *ptr;

    ptr = &s1;   // Pointer to structure

    // Access members using pointer
    ptr->id = 101;
    strcpy(ptr->name, "Goutham");
    ptr->marks = 89.5;

    printf("Student ID   : %d\n", ptr->id);
    printf("Student Name : %s\n", ptr->name);
    printf("Marks        : %.2f\n", ptr->marks);

    return 0;
}
